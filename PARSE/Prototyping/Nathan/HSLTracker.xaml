<Window x:Class="PARSE.Prototyping.Nathan.HSLTracker"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="HSL Scanner Tracker" Height="700" Width="1100" Name="HSLTrackerWindow" DataContext="{Binding}" SizeToContent="WidthAndHeight" WindowStartupLocation="CenterScreen" WindowState="Maximized" Loaded="BasicTrackerWindow_Loaded">
    <Grid>
        <GroupBox Header="Processed Image" Height="500" HorizontalAlignment="Left" Margin="10,10,0,0" Name="groupBox2" VerticalAlignment="Top" Width="660">
            <Grid Height="490" Width="650">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="260*" />
                    <ColumnDefinition Width="281*" />
                </Grid.ColumnDefinitions>
                <Image Grid.ColumnSpan="2" Height="480" HorizontalAlignment="Left" ImageFailed="procImage_ImageFailed" Margin="6,6,0,0" Name="procImage" Stretch="Fill" VerticalAlignment="Top" Width="640" />
            </Grid>
        </GroupBox>
        <Slider Height="23" HorizontalAlignment="Left" Margin="676,60,0,0" Name="slider1" VerticalAlignment="Top" Width="390" ValueChanged="slider1_ValueChanged" Value="180" LargeChange="20" Maximum="360" SmallChange="1" TabIndex="1" />
        <Slider Height="23" HorizontalAlignment="Left" Margin="676,129,0,0" Name="slider2" VerticalAlignment="Top" Width="390" Value="50" Maximum="100" SmallChange="1" TickFrequency="10" TabIndex="2" ValueChanged="slider2_ValueChanged" />
        <Slider Height="23" HorizontalAlignment="Left" Margin="676,194,0,0" Name="slider3" VerticalAlignment="Top" Width="390" Maximum="100" LargeChange="10" Value="50" Interval="1" TickFrequency="10" TickPlacement="None" TabIndex="3" ValueChanged="slider3_ValueChanged" />
        <Label Content="Current target:" Height="40" HorizontalAlignment="Left" Margin="695,275,0,0" Name="HSL_Target_Label" VerticalAlignment="Top" Width="358" />
        <Slider Height="23" HorizontalAlignment="Left" Margin="676,380,0,0" Name="range_slider" VerticalAlignment="Top" Width="390" Maximum="50" SmallChange="1" LargeChange="5" ValueChanged="range_slider_ValueChanged" />
        <Label Content="Variance:" Height="28" HorizontalAlignment="Left" Margin="695,346,0,0" Name="range_label" VerticalAlignment="Top" Width="236" />
    </Grid>
</Window>

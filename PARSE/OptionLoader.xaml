<Window x:Class="PARSE.OptionLoader"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="OptionLoader" WindowStyle="None" Height="250" Width="400" WindowStartupLocation="CenterScreen">
    <Grid>
        <Label Content="What would you like to do?" FontSize="18" FontWeight="Bold" Height="44" HorizontalAlignment="Left" Margin="12,12,0,0" Name="label1" VerticalAlignment="Top" Width="238" />
        <Button Content="Perform a Volume Scan" Height="27" HorizontalAlignment="Left" Margin="66,60,0,0" Name="volumeBtn" VerticalAlignment="Top" Width="242" Click="volumeBtn_Click" />
        <Button Content="Register a New Scan" Height="27" HorizontalAlignment="Left" Margin="66,95,0,0" Name="registerBtn" VerticalAlignment="Top" Width="242" Click="registerBtn_Click" />
        <Button Content="Recall a Registered Scan" Height="27" HorizontalAlignment="Left" Margin="66,130,0,0" Name="recallBtn" VerticalAlignment="Top" Width="242" />
        <Button Content="Cancel" Height="27" HorizontalAlignment="Left" Margin="136,180,0,0" Name="cancelBtn" VerticalAlignment="Top" Width="100" Click="cancelBtn_Click" />
    </Grid>
</Window>

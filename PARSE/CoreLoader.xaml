<Window x:Class="PARSE.CoreLoader"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"           
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:wf="clr-namespace:System.Windows.Forms;assembly=System.Windows.Forms"
        xmlns:h="clr-namespace:HelixToolkit.Wpf;assembly=HelixToolkit.Wpf"
        Title="Body Measurement and Scanning Environment by PARSE" Loaded="Window_Loaded" Closing="WindowClosing">
    <Window.Background>
        <LinearGradientBrush EndPoint="0.504,1.5" StartPoint="0.504,0.03">
            <GradientStop Color="#FFFFFFFF" Offset="0"/>
            <GradientStop Color="SkyBlue" Offset="0.567"/>
        </LinearGradientBrush>
    </Window.Background>
    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="Resources/parseback.png" Stretch="None"/>
        </Grid.Background>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        
        <Menu>
        <!--Menu definition-->
        <MenuItem Header="_File">
            <MenuItem Header="_New Patient" IsCheckable="true"/>
            <MenuItem Header="_Open Patient" IsCheckable="true"/>
            <MenuItem Header="_Save Patient" IsCheckable="true"/>
            <Separator/>
            <MenuItem Header="Exit" IsCheckable="true"/>
        </MenuItem>
        <MenuItem Header="_Edit">

        </MenuItem>
            <MenuItem Header="_Control">
                <MenuItem Header="_Calibrate" IsCheckable="False" Click="btnSensorUp_Click"/>
                <Separator/>
                <MenuItem Header="_Adjust Sensor Up" IsCheckable="False" Click="btnSensorUp_Click"/>
                <MenuItem Header="_Adjust Sensor Down" IsCheckable="False" Click="btnSensorDown_Click"/>
            </MenuItem>
        <MenuItem Header="Patient">
            <MenuItem Header="Capture">
                <MenuItem Header="Volume" IsCheckable="true" Click="VolumeOption_Click"/>
                <MenuItem Header="Limb Circumference" IsCheckable="true" Click="LimbOption_Click"/>
            </MenuItem>
            <MenuItem Header="_Details" IsCheckable="False"/>
            <Separator/>
                <MenuItem Header="_New Scan..." IsCheckable="False" Click="NewScan_Click" />
                <MenuItem Header="_Import Scan" IsCheckable="False" Click="ImportScan_Click"/>
                <MenuItem Header="_Export Scan to .PARSE" IsCheckable="False" Click="ExportScan_Click"/>
                <MenuItem Header="_Export Scan to .PCD" IsCheckable="False" Click="ExportScanPCD_Click"/>
                <MenuItem Header="_Group Point Clouds" IsCheckable="False" Click="SimpleStitchTest_Click"/>
            </MenuItem>
        <MenuItem Header="_Help">

        </MenuItem>
        </Menu>

        <!--Menu definition-->
            <!--Kinect Imager-->
            <Image Height="425" HorizontalAlignment="Left" Margin="187,27,0,0" Stretch="Fill" VerticalAlignment="Top" Width="543" Name="kinectImager" Grid.Row="1"  />
            <!--Kinect Imager-->

            <!--Skeletal Canvas Overlay -->
            <Canvas Grid.Row="1" Height="426" HorizontalAlignment="Left" Margin="187,26,0,0" Name="vpcanvas2" VerticalAlignment="Top" Width="543"></Canvas>
            <!--Skeletal Canvas Overlay -->

            <!--Kinect Control Panel -->
            <Grid Height="126" HorizontalAlignment="Left" Margin="12,216,0,0" Name="grid1" VerticalAlignment="Top" Width="160" Grid.Row="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="91*" />
                    <RowDefinition Height="35*" />
                </Grid.RowDefinitions>
            <Label Content="Status" Height="29" HorizontalAlignment="Left" Margin="10,480,0,0" Name="lblStatus" VerticalAlignment="Top" Grid.Row="1" />

            </Grid>

            <!--Main grid-->
            <Grid Name="grid" Margin="0,0,0,501" Grid.RowSpan="2">
                <Image Width="750" Name="image" HorizontalAlignment="Left" Margin="-1,22,0,-398" />
            </Grid>
            <!--Main grid-->

            <!--Visualisation Grid-->
            <Grid Grid.Row="1" Height="194" HorizontalAlignment="Right" Margin="0,0,576,0" Name="grid4" VerticalAlignment="Top" Width="162">
          
            </Grid>
            <!--Visualisation Grid-->

            <!--Additional Controls-->
            <Canvas Grid.Row="1" Height="11" HorizontalAlignment="Left" Margin="156,472,0,0" Name="vpcanvas" VerticalAlignment="Top" Width="18" />
            <Label Grid.Row="1" Height="47" HorizontalAlignment="Left" Margin="202,389,0,0" Name="label4" VerticalAlignment="Top" Width="436" FontWeight="Normal" BorderThickness="1" Background="#48808080" OpacityMask="White" Foreground="#FFF60606" FontSize="20">
                <Label.BorderBrush>
                    <SolidColorBrush />
                </Label.BorderBrush>
            </Label>
            <!--Additional Controls-->

            <!--Helix viewport (WPF3D supporting framework, base layer for all other canvas layers) -->
        </Grid>
</Window>

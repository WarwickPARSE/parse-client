<Window x:Class="PARSE.CoreLoader"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"           
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:wf="clr-namespace:System.Windows.Forms;assembly=System.Windows.Forms"
        xmlns:h="clr-namespace:HelixToolkit.Wpf;assembly=HelixToolkit.Wpf"
        Title="Body Measurement and Scanning Environment by PARSE" Loaded="Window_Loaded" Closing="WindowClosing" Width="{x:Static SystemParameters.PrimaryScreenWidth}"  Height="{x:Static SystemParameters.PrimaryScreenHeight}">
    <!--Window Background Attributes-->
    <Window.Background>
        <LinearGradientBrush EndPoint="0.504,1.5" StartPoint="0.504,0.03">
            <GradientStop Color="#FFFFFFFF" Offset="0"/>
            <GradientStop Color="SkyBlue" Offset="0.567"/>
        </LinearGradientBrush>
    </Window.Background>
    <!--Start of MAIN Coreloader layout grid-->
    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="Resources/parseback.png" Stretch="None"/>
        </Grid.Background>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        
        <Menu>
        <!--Menu definition-->
        <MenuItem Header="_File">
            <MenuItem Header="_New Patient" IsCheckable="false"/>
            <MenuItem Header="_Open Patient" />
            <MenuItem Header="_Save Patient" />
            <Separator/>
            <MenuItem Header="Exit" Click="MenuItem_Exit"/>
        </MenuItem>
        <MenuItem Header="Kinect">
                <MenuItem Header="View Feed">
                    <MenuItem Header="RGB" Click="RGB_Click"/>
                    <MenuItem Header="Depth" Click="Depth_Click"/>
                    <MenuItem Header="Skeleton" Click="Skeleton_Click"/>
                    <MenuItem Header="RGB Isolation" Click="RGBIso_Click"/>
                    <MenuItem Header="Depth Isolation" Click="DepthIso_Click"/>
                </MenuItem>
                <MenuItem Header="_Adjust Sensor Up" IsCheckable="False" Click="btnSensorUp_Click"/>
                <MenuItem Header="_Adjust Sensor Down" IsCheckable="False" Click="btnSensorDown_Click"/>
        </MenuItem>
    <MenuItem Header="Patient">
                <MenuItem Header="New Scan" IsCheckable="False" Click="NewScan_Click" />
                <MenuItem Header="View Previous Scan" IsCheckable="False" Click="LoadScan_Click"/>
                <MenuItem Header="_Export Scan to .PARSE" IsCheckable="False" Click="ExportScan_Click"/>
                <MenuItem Header="_Export Scan to .PCD" IsCheckable="False" Click="ExportScanPCD_Click"/>
                <MenuItem Header="Add Measurement"  Click="AddMeasurement_Click"/>
                <MenuItem Header="Remove Their Feet" IsCheckable="False" Click="RemoveFeet_Click"/>
                </MenuItem>
     <MenuItem Header="Capture">
                    <MenuItem Header="Volume" IsCheckable="true" Click="VolumeOption_Click"/>
                    <MenuItem Header="Limb Circumference" IsCheckable="true" Click="LimbOption_Click"/>
     </MenuItem>
     <MenuItem Header="_Help">

     </MenuItem>
    </Menu>

        <!--Central Textblock -->
        <Canvas Name="optioncv" Margin="363,220,375,182" Grid.Row="1">
        <TextBlock Margin="455,404,683,310" Grid.Row="1" Canvas.Left="-353" Canvas.Top="-227">
            <Image Name="add" Source="Resources/plus.png" Width="15" Height="15" VerticalAlignment="Center"/>
            <Hyperlink Click="AddNewPatient_Click">
                    Add New Patient
            </Hyperlink>
        </TextBlock>
        <TextBlock Margin="455,434,667,286" Grid.Row="1" Canvas.Left="-353" Canvas.Top="-227">   
             <Image Name="load" Source="Resources/open.png" Width="15" Height="15" VerticalAlignment="Center"/>
            <Hyperlink Click="LoadScan_Click">
                    Load Existing Patient
            </Hyperlink>
        </TextBlock>
        <TextBlock Margin="455,466,597,255" Grid.Row="1" Canvas.Left="-353" Canvas.Top="-227">
             <Image Name="person" Source="Resources/person.png" Width="15" Height="15" VerticalAlignment="Center"/>
            <Hyperlink Click="NewScan_Click">
                    Start Volume Scanning Procedure
            </Hyperlink>
        </TextBlock>
        <TextBlock Margin="455,496,620,225" Grid.Row="1" Canvas.Left="-353" Canvas.Top="-227">
             <Image Name="history" Source="Resources/clock.png" Width="15" Height="15" VerticalAlignment="Center"/>
            <Hyperlink NavigateUri="http://www.google.com" >
                    View History
            </Hyperlink>
        </TextBlock>
        <Label Content="Recent Patients" Height="28" Name="label1" Width="109" FontWeight="Bold" FontSize="14" Margin="670,358,480,353" Grid.Row="1" Canvas.Left="-353" Canvas.Top="-213" />
        <Label Content="Welcome" FontSize="14" FontWeight="Bold" Height="28" Name="label2" Width="109" Margin="455,358,694,352" Grid.Row="1" Canvas.Left="-353" Canvas.Top="-213" />
        <!--Legacy canvas definition -->
        <Canvas Name="vpcanvas2"/>
        </Canvas>
    </Grid>
</Window>
